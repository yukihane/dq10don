<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <!-- 船旅 -->
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:layout_width="0px"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="@string/text_farm_nextSailoutDt"
      android:textSize="18sp"/>

    <TextView
      android:id="@+id/farmNextSailoutDt"
      android:layout_width="0px"
      android:layout_height="wrap_content"
      android:layout_weight="2"
      android:textSize="18sp"/>
  </LinearLayout>


  <!-- 船旅報酬 -->
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:layout_width="0px"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="@string/text_farm_nearLimitDt"
      android:textSize="18sp"/>

    <TextView
      android:id="@+id/farmNearLimitDt"
      android:layout_width="0px"
      android:layout_height="wrap_content"
      android:layout_weight="2"
      android:textSize="18sp"/>
  </LinearLayout>


  <!-- 青宝箱 -->
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:layout_width="0px"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="@string/text_farm_isFriendBlueBox"
      android:textSize="18sp"/>

    <TextView
      android:id="@+id/farmIsFriendBlueBox"
      android:layout_width="0px"
      android:layout_height="wrap_content"
      android:layout_weight="2"
      android:textSize="18sp"/>
  </LinearLayout>


  <!-- 宝箱 -->
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:layout_width="0px"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="@string/text_farm_treasureboxList"
      android:textSize="18sp"/>

    <TextView
      android:id="@+id/farmTreasureboxList"
      android:layout_width="0px"
      android:layout_height="wrap_content"
      android:layout_weight="2"
      android:textSize="18sp"/>
  </LinearLayout>


  <!-- 雑草 -->
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:layout_width="0px"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="@string/text_farm_grassList"
      android:textSize="18sp"/>

    <TextView
      android:id="@+id/farmGrassList"
      android:layout_width="0px"
      android:layout_height="wrap_content"
      android:layout_weight="2"
      android:textSize="18sp"/>
  </LinearLayout>


</LinearLayout>
